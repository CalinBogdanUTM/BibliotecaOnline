@model MyLibrary.Web.Models.AdminViewModel

<!DOCTYPE html>
<html lang="ro">
<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Admin Biblioteca Online</title>
     <style>
          body {
               font-family: Arial, sans-serif;
               background-color: #f5f5f5;
               margin: 0;
               padding: 0;
          }

          header {
               background-color: #4CAF50;
               color: white;
               padding: 15px;
               text-align: center;
          }

          .container {
               padding: 20px;
          }

          .form-section, .list-section {
               background-color: white;
               padding: 20px;
               margin: 20px 0;
               border-radius: 8px;
               box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
          }

               .form-section h2, .list-section h2 {
                    margin-top: 0;
               }

          .form-group {
               margin-bottom: 15px;
          }

               .form-group label {
                    display: block;
                    margin-bottom: 5px;
               }

               .form-group input, .form-group textarea, .form-group select {
                    width: 100%;
                    padding: 8px;
                    box-sizing: border-box;
               }

               .form-group button {
                    background-color: #4CAF50;
                    color: white;
                    padding: 10px 15px;
                    border: none;
                    cursor: pointer;
                    border-radius: 4px;
               }

                    .form-group button:hover {
                         background-color: #45a049;
                    }

          table {
               width: 100%;
               border-collapse: collapse;
               margin-top: 20px;
          }

          table, th, td {
               border: 1px solid #ddd;
          }

          th, td {
               padding: 10px;
               text-align: left;
          }

          th {
               background-color: #f2f2f2;
          }

          .book-image {
               width: 100px;
               height: auto;
          }
     </style>
</head>
<body>
     <header>
          <h1>Admin Biblioteca Online</h1>
     </header>
     <div class="container">
          <!-- Form pentru adăugarea unei noi cărți -->
          <div class="form-section">
               <h2>Adaugă o carte nouă</h2>
               <form id="addBookForm">
                    <div class="form-group">
                         <label for="title">Titlu:</label>
                         <input type="text" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                         <label for="author">Autor:</label>
                         <input type="text" id="author" name="author" required>
                    </div>
                    <div class="form-group">
                         <label for="description">Descriere:</label>
                         <textarea id="description" name="description" required></textarea>
                    </div>
                    <div class="form-group">
                         <label for="coverImage">Numele imaginii pentru copertă:</label>
                         <input type="text" id="coverImage" name="coverImage" required>
                    </div>
                    <div class="form-group">
                         <label for="publicationDate">Data publicării:</label>
                         <input type="date" id="publicationDate" name="publicationDate" required>
                    </div>
                    <div class="form-group">
                         <label for="language">Limbă:</label>
                         <input type="text" id="language" name="language" required>
                    </div>
                    <div class="form-group">
                         <label for="category">Categorie:</label>
                         <input type="text" id="category" name="category" required>
                    </div>
                    <div class="form-group">
                         <button type="submit">Adaugă cartea</button>
                    </div>
               </form>
          </div>

          <!-- Form pentru editarea unei cărți existente -->
          <div class="form-section">
               <h2>Editează o carte</h2>
               <form id="editBookForm">
                    <div class="form-group">
                         <label for="bookId">ID-ul cărții:</label>
                         <input type="text" id="bookId" name="bookId" required>
                    </div>
                    <div class="form-group">
                         <label for="newTitle">Titlu nou:</label>
                         <input type="text" id="newTitle" name="newTitle">
                    </div>
                    <div class="form-group">
                         <label for="newAuthor">Autor nou:</label>
                         <input type="text" id="newAuthor" name="newAuthor">
                    </div>
                    <div class="form-group">
                         <label for="newDescription">Descriere nouă:</label>
                         <textarea id="newDescription" name="newDescription"></textarea>
                    </div>
                    <div class="form-group">
                         <label for="newCoverImage">Numele imaginii noi pentru copertă:</label>
                         <input type="text" id="newCoverImage" name="newCoverImage">
                    </div>
                    <div class="form-group">
                         <label for="newPublicationDate">Data nouă a publicării:</label>
                         <input type="date" id="newPublicationDate" name="newPublicationDate">
                    </div>
                    <div class="form-group">
                         <label for="newLanguage">Limbă nouă:</label>
                         <input type="text" id="newLanguage" name="newLanguage">
                    </div>
                    <div class="form-group">
                         <label for="newCategory">Categorie nouă:</label>
                         <input type="text" id="newCategory" name="newCategory">
                    </div>
                    <div class="form-group">
                         <button type="submit">Editează cartea</button>
                    </div>
               </form>
          </div>

          <!-- Form pentru schimbarea email-ului unui utilizator -->
          <div class="form-section">
               <h2>Schimbă email-ul unui utilizator</h2>
               <form id="editUserEmailForm">
                    <div class="form-group">
                         <label for="userId">ID-ul utilizatorului:</label>
                         <input type="text" id="userId" name="userId" required>
                    </div>
                    <div class="form-group">
                         <label for="newEmail">Email nou:</label>
                         <input type="email" id="newEmail" name="newEmail" required>
                    </div>
                    <div class="form-group">
                         <button type="submit">Schimbă email-ul</button>
                    </div>
               </form>
          </div>

          <!-- Listă cu toți utilizatorii -->
          <div class="list-section">
               <h2>Lista utilizatorilor</h2>
               <table>
                    <thead>
                         <tr>
                              <th>ID</th>
                              <th>Nume</th>
                              <th>Email</th>
                         </tr>
                    </thead>
                    <tbody id="userList">
                         @if (Model.Users != null && Model.Users.Any())
                         {
                              foreach (var user in Model.Users)
                              {
                                   <tr>
                                        <td>@user.Id</td>
                                        <td>@user.Username</td>
                                        <td>@user.Email</td>
                                   </tr>
                              }
                         }
                         else
                         {
                              <tr>
                                   <td colspan="3">Nu există utilizatori disponibili.</td>
                              </tr>
                         }
                    </tbody>
               </table>
          </div>

          <!-- Listă cu toate cărțile -->
          <div class="list-section">
               <h2>Lista cărților</h2>
               <table>
                    <thead>
                         <tr>
                              <th>ID</th>
                              <th>Titlu</th>
                              <th>Autor</th>
                              <th>Descriere</th>
                              <th>Imagine Copertă</th>
                              <th>Data Publicării</th>
                              <th>Limbă</th>
                              <th>Categorie</th>
                         </tr>
                    </thead>
                    <tbody>
                         @if (Model.Books != null && Model.Books.Any())
                         {
                              foreach (var book in Model.Books)
                              {
                                   <tr>
                                        <td>@book.BookId</td>
                                        <td>@book.Title</td>
                                        <td>@book.Author</td>
                                        <td>@book.Description</td>
                                        <td><img src="~/images/coperta/@book.ImageUrl" alt="@book.Title" class="book-image"></td>
                                        <td>@book.PublishingDate.ToString("yyyy-MM-dd")</td>
                                        <td>@book.Language</td>
                                        <td>@book.Category</td>
                                   </tr>
                              }
                         }
                         else
                         {
                              <tr>
                                   <td colspan="8">Nu există cărți disponibile.</td>
                              </tr>
                         }
                    </tbody>
               </table>
          </div>
     </div>

     <script>

     </script>
     @RenderBody();
</body>
</html>
<!DOCTYPE html>
