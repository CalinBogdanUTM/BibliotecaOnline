<!DOCTYPE html>
<html>
<head>
     <title>Pagina de Administrare</title>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
     <style>
          body {
               font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
               margin: 20px;
          }

          h1, h2 {
               color: #333;
               text-align: center;
               margin-bottom: 30px;
          }

          form {
               max-width: 600px;
               margin: 0 auto 30px;
               padding: 20px;
               border: 1p border-radius: 5px;
               background-color: #f9f9f9;
          }

          label {
               font-weight: bold;
          }

          input[type="text"], textarea {
               width: 100%;
               padding: 10px;
               margin-bottom: 15px;
               border: 1px solid #ccc;
               border-radius: 4px;
               box-sizing: border-box;
          }

          button {
               padding: 10px 20px;
               background-color: #4CAF50;
               color: white;
               border: none;
               border-radius: 4px;
               cursor: pointer;
          }
     </style>
</head>
<body>
     <h1>Pagina de Administrare</h1>

     <h2>Adăugare Carte Nouă</h2>
     <form>
          <div class="mb-3">
               <label for="titlu" class="form-label">Titlu:</label>
               <input type="text" class="form-control" id="titlu" name="titlu" required>
          </div>
          <div class="mb-3">
               <label for="autor" class="form-label">Autor:</label>
               <input type="text" class="form-control" id="autor" name="autor" required>
          </div>
          <div class="mb-3">
               <label for="descriere" class="form-label">Descriere:</label>
               <textarea class="form-control" id="descriere" name="descriere" rows="4" required></textarea>
          </div>
          <div class="mb-3">
               <label for="coperta" class="form-label">Coperta (URL):</label>
               <input type="text" class="form-control" id="coperta" name="coperta" required>
          </div>
          <div class="mb-3">
               <label for="pdf" class="form-label">Fișier PDF:</label>
               <input type="file" class="form-control" id="pdf" name="pdf" accept=".pdf" required>
          </div>
          <button type="submit" class="btn btn-primary">Adaugă Carte</button>
     </form>

     <h2>Editare Carte</h2>
     <form>
          <div class="mb-3">
               <label for="id_carte" class="form-label">ID Carte:</label>
               <input type="text" class="form-control" id="id_carte" name="id_carte" required>
          </div>
          <div class="mb-3">
               <label for="titlu_edit" class="form-label">Titlu:</label>
               <input type="text" class="form-control" id="titlu_edit" name="titlu_edit">
          </div>
          <div class="mb-3">
               <label for="autor_edit" class="form-label">Autor:</label>
               <input type="text" class="form-control" id="autor_edit" name="autor_edit">
          </div>
          <div class="mb-3">
               <label for="descriere_edit" class="form-label">Descriere:</label>
               <textarea class="form-control" id="descriere_edit" name="descriere_edit" rows="4"></textarea>
          </div>
          <div class="mb-3">
               <label for="coperta_edit" class="form-label">Coperta (URL):</label>
               <input type="text" class="form-control" id="coperta_edit" name="coperta_edit">
          </div>
          <div class="mb-3">
               <label for="pdf_edit" class="form-label">Fișier PDF:</label>
               <input type="file" class="form-control" id="pdf_edit" name="pdf_edit" accept=".pdf">
          </div>
          <button type="submit" class="btn btn-primary">Actualizează Carte</button>
     </form>

     <h2>Administrare Conturi Utilizatori</h2>
     <form>
          <div class="mb-3">
               <label for="id_user" class="form-label">ID Utilizator:</label>
               <input type="text" class="form-control" id="id_user" name="id_user" required>
          </div>
          <div class="mb-3">
               <label for="actiune" class="form-label">Acțiune:</label>
               <select class="form-select" id="actiune" name="actiune">
                    <option value="schimba_parola">Schimbă Parolă</option>
                    <option value="reseteaza_parola">Resetează Parolă</option>
                    <option value="activeaza_cont">Activează Cont</option>
                    <option value="dezactiveaza_cont">Dezactivează Cont</option>
               </select>
          </div>
          <button type="submit" class="btn btn-primary">Aplică Acțiune</button>
     </form>

     <!-- Cod JavaScript pentru trimiterea datelor către server -->
     <script>
          const forms = document.querySelectorAll('form');
          forms.forEach(form => {
               form.addEventListener('submit', e => {
                    e.preventDefault();
                    const formData = new FormData(form);
                    // Trimite datele către server folosind XMLHttpRequest sau Fetch API
                    // ...
               });
          });
     </script>
     @RenderBody();
</body>
</html>
