        </div>
    </section>
    <!-- End: Social Network -->
    <!-- Start: Footer -->
    
    <footer id="footer"> @Html.Partial("_Footer") </footer>
    <!-- End: Footer -->
    <!-- jQuery Latest Version 1.x -->
    @Scripts.Render("~/bundles/vendorjs")
    <script>
     $(document).ready(function () {
         $("#searchButton").click(function (event) {
             event.preventDefault();

             var formData = $("#searchForm").serialize();

             $.ajax({
                 type: "GET",
                 url: "/Books/SearchBooks",
                 data: formData,
                 success: function (data) {
                     console.log("Data returned from the server:", data); // Add this for debugging
                     $("#searchResults").html(data);
                 },
                 error: function () {
                     console.log("Error fetching search results.");
                     $("#searchResults").html("<p>An error occurred while searching. Please try again later.</p>");
                 }
             });
         });
     });
 </script>
    @RenderBody();
</body>


</html>