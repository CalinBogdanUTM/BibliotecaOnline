             if (result.success) {
                
             } else {
                 // Handle error (e.g., display an error message)
                 console.error("Error recording Favorites interaction:", result.error);
                 alert("An error occurred. Please try again.");
             }
         },
         error: function () {
             console.error("AJAX request failed.");
             alert("An error occurred. Please try again.");
         }
     });
 }
    </script>
    


    </body>
</html>
