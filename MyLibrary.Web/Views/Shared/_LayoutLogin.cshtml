
@model MyLibrary.Web.Models.UserLogin



<!DOCTYPE html>

<!-- Coding By CodingNepal - codingnepalweb.com -->

<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Registration or Sign Up form in HTML CSS | CodingLab </title>
    <link href="~/Vendor/css/authstyle.css" rel="stylesheet" />
    @RenderBody()
</head>

<body>
<div class="wrapper">
    <h2>Login</h2>
    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form action="#">
            <div class="input-box">
                @Html.TextBoxFor(m => m.Credential, new { placeholder = "Username", required = "required" })
                @Html.ValidationMessageFor(m => m.Credential)
            </div>
            <div class="input-box">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", required = "required" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="input-box button">
                <input type="Submit" value="Login">
            </div>
            <div class="text">
                <h3>New? Create an account: <a href="@Url.Action("Index","Register" )">Register Now</a></h3>
            </div>
        </form>
    }
</div>
</body>

</html>